//Declare List of Contact for create
List<Contact> conList = new List<Contact>();

//new Contact instance
Contact objcon5= new Contact();

//pass the values
objcon5.FirstName = 'Kailsa Chandra';
objcon5.LastName = 'Nayak';
objcon5.Phone = '9899898988';
objcon5.Email = 'sani3nayak@gmail.com';

//add to list of Contact
conList.add(objcon5);

//repeat for 3 records
//new Contact instance
Contact objcon6= new Contact();

//pass the values
objcon6.FirstName = 'Subhasmita';
objcon6.LastName = 'Das';
objcon6.Phone = '8925362718';
objcon6.Email = 'subhasmitadas@gmail.com';

//add to list of Contact
conList.add(objcon6);

//new Contact instance
Contact objcon7= new Contact();

//pass the values
objcon7.FirstName = 'Sanjukta';
objcon7.LastName = 'Nayak';
objcon7.Phone = '9827382819';
objcon7.Email = 'sanjuktanayak@gmail.com';

//add to list of Contact
conList.add(objcon7);

//insert the list
Insert conList; 

