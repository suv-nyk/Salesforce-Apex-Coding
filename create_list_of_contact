//Declare List of Contact for update
List<Contact> conListedit = new List<Contact>();

//take 1 Contact instance with id
Contact editConObj = new Contact(ID = '003dM000000evwgQAA');

//update 2 fields
editConObj.FirstName = 'Suvendu';
editConObj.LastName = 'Nayak';

//add it to another list of Contact which is defined for update
conListedit.add(editConObj);

//repeat for 3 records
//take 1 Contact instance with id
Contact editConObj2 = new Contact(ID = '003dM000000evwhQAA');

//update 2 fields
editConObj2.Phone = '7205489434';

//add it to another list of Contact which is defined for update
conListedit.add(editConObj2);

